# Admin Panel
admin.{$DOMAIN:cosmosli.de} {
    reverse_proxy admin:3000
}

# Backend API
api.{$DOMAIN:cosmosli.de} {
    reverse_proxy backend:3000
}

# V1 Frontend - Redirect to main domain
v1.{$DOMAIN:cosmosli.de} {
    redir https://{$DOMAIN:cosmosli.de}{uri} permanent
}

# Main Frontend
{$DOMAIN:cosmosli.de}, www.{$DOMAIN:cosmosli.de} {
    reverse_proxy frontend:3000
}

