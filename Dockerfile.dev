# Development Dockerfile with optimized hot reloading
FROM node:24-bullseye

# Install dependencies for better compatibility and PostgreSQL client
RUN apt-get update \
	&& apt-get install -y python3 make g++ postgresql-client vim

# Install poppler-utils and poppler-data for node-poppler
RUN apt-get install -y poppler-data poppler-utils \
	&& rm -rf /var/lib/apt/lists/*

# Enable corepack for pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /app

# Copy only package files first for better caching
COPY package*.json pnpm-lock.yaml pnpm-workspace.yaml .npmrc ./

# Copy local packages
COPY packages ./packages

# Install dependencies
RUN pnpm install

# We don't copy source files here because they'll be mounted as volumes

# Expose port
EXPOSE 3000

# Start development server with hot reloading
CMD ["pnpm", "--filter", "@cosmoslide/backend", "start:dev"]
