{
  "name": "cosmoslide",
  "version": "0.0.1",
  "description": "Federated platform for sharing presentations and microblogging built on ActivityPub",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter @cosmoslide/backend start:dev\" \"pnpm --filter @cosmoslide/frontend dev\"",
    "dev:backend": "pnpm --filter @cosmoslide/backend start:dev",
    "dev:frontend": "pnpm --filter @cosmoslide/frontend dev",
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter @cosmoslide/backend build",
    "build:frontend": "pnpm --filter @cosmoslide/frontend build",
    "test": "pnpm --filter @cosmoslide/backend test",
    "test:watch": "pnpm --filter @cosmoslide/backend test:watch",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "generate-key": "pnpm --filter @cosmoslide/backend generate-key",
    "create-user": "pnpm --filter @cosmoslide/backend create-user",
    "grant-admin": "pnpm --filter @cosmoslide/backend grant-admin",
    "migration:generate": "pnpm --filter @cosmoslide/backend migration:generate",
    "migration:run": "pnpm --filter @cosmoslide/backend migration:run",
    "migration:revert": "pnpm --filter @cosmoslide/backend migration:revert",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": "prettier --write",
    "packages/**/*.{js,jsx}": "prettier --write",
    "packages/**/*.{json,css,md}": "prettier --write"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@swc/core",
      "esbuild"
    ]
  }
}
